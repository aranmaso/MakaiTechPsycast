<Defs> 

	<DamageDef>
    <defName>TrueDestruction_LightningTower</defName>
    <label>True Blast</label>
    <workerClass>DamageWorker_AddInjury</workerClass>
    <externalViolence>true</externalViolence>
    <deathMessage>{0} has died in an explosion.</deathMessage>
    <hediff>Burn</hediff>
    <hediffSolid>Crack</hediffSolid>
    <harmAllLayersUntilOutside>true</harmAllLayersUntilOutside>
	<buildingDamageFactor>10</buildingDamageFactor>
    <plantDamageFactor>10</plantDamageFactor>
    <armorCategory>Sharp</armorCategory>
	<defaultDamage>2</defaultDamage>
	<minDamageToFragment>15</minDamageToFragment>
	<defaultStoppingPower>0.5</defaultStoppingPower>
    <defaultArmorPenetration>5.00</defaultArmorPenetration>
    <isRanged>true</isRanged>
    <makesAnimalsFlee>true</makesAnimalsFlee>
	<isExplosive>true</isExplosive>
	<explosionAffectOutsidePartsOnly>false</explosionAffectOutsidePartsOnly>
    <explosionHeatEnergyPerCell>200</explosionHeatEnergyPerCell>
    <explosionCellFleck>MakaiPsyMote_Invis</explosionCellFleck>
	<!--explosionInteriorFleck>Mote_Invis</explosionInteriorFleck-->
    <explosionColorCenter>(255,255,0,255)</explosionColorCenter>
    <explosionColorEdge>(255,255,0,50)</explosionColorEdge>
    <soundExplosion>Explosion_EMP</soundExplosion>
    <combatLogRules>Damage_Bomb</combatLogRules>
	<damageEffecter>MakaiPsy_TD_Blast</damageEffecter>
	</DamageDef>
	
